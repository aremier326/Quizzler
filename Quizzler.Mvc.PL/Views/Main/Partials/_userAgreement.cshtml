<div class="buttons d-flex flex-column">
    <div class="d-flex form-check justify-content-center">
        <input class="form-check-input" type="checkbox" value="" id="termsCheckbox">
        <label class="form-check-label" for="flexCheckDefault">
            I agree to start
        </label>
    </div>
    <div class="d-flex justify-content-center">
        <a id="continue" asp-controller="Main" asp-action="QA" class="btn btn-primary disabled" role="button">Continue</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Exit</a>
    </div>
</div>
<script type="text/javascript">
    const checkBox = document.getElementById("termsCheckbox");
    checkBox.onclick = () => {
        const continue_btn = document.getElementById("continue");
        if (!checkBox.checked) {
            continue_btn.classList.add("disabled")
        }
        else {
            continue_btn.classList.remove("disabled")
        }
    }
</script>